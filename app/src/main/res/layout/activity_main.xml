<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.beardsmcgee.brainteaser.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3 + 2"
        android:id="@+id/problemTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5"
        android:id="@+id/timerTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0/0"
        android:id="@+id/scoreTextView"
        android:layout_alignTop="@+id/problemTextView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="55"
        android:id="@+id/topLeftTextView"
        android:layout_below="@+id/problemTextView"
        android:layout_toEndOf="@+id/timerTextView"
        android:layout_marginTop="94dp"
        android:background="@android:color/holo_blue_bright"
        android:padding="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="55"
        android:id="@+id/topRightTextView"
        android:layout_alignTop="@+id/topLeftTextView"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_orange_dark"
        android:padding="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="55"
        android:id="@+id/bottomLeftTextView"
        android:background="@android:color/holo_purple"
        android:padding="50dp"
        android:layout_below="@+id/topLeftTextView"
        android:layout_alignStart="@+id/topLeftTextView"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="55"
        android:id="@+id/bottomRightTextView"
        android:background="@android:color/holo_red_light"
        android:padding="50dp"
        android:layout_alignTop="@+id/bottomLeftTextView"
        android:layout_alignStart="@+id/topRightTextView" />

</RelativeLayout>
